pipeline {
    agent any  
    stages {
        stage('Git Clone') {
            steps {
                sh 'git clone https://github.com/sdaida/DevOpsClassCodes.git '
            }
        }
        stage('Deployment') {
            steps {
                sh 'kubectl apply -f  adressbook-deployment.yaml'
            }
        }
        stage('Service') {
            steps {
                sh 'kubectl apply -f addressbook-service.yaml'
            }
        }
    }
}
